= sections.map{|sec| ApplicationController.helpers.btn_link_with_tooptip("/admin/section/#{sec.id}", 'btn-info', sec.code, sec.schedule_teacher_desc_short, placement='top')}.to_sentence.html_safe

- if has_enrolled
  %b{title: 'Elimine las inscripciones en la sección para activar esta opcíon'}
    = link_to 'javascript:void(0)', class: 'btn btn-sm btn-danger disabled' do
      %i.fas.fa-trash
- else
  - url = '/sections/bulk_delete'
  - sections.each_with_index do |sec, i|
    - aux = (i.eql? 0) ? "?" : "&"
    - url += "#{aux}bulk_ids%5B%5D=#{sec.id}"

  = link_to url, class: 'btn btn-sm btn-danger', title: 'Eliminar Todas Secciones', method: :post, 'data-confirm': "Está acción es irreversible, eliminará un total de #{sections.count}" do
    %i.fas.fa-trash


= form_tag("/academic_processes/clone_sections", class: 'form-horizontal') do
  = hidden_field_tag :id, academic_process.id
  .modal-body
    .control-group.my-3
      %span.control-label
        Escuela:
        %b= label_tag academic_process.school.short_name.upcase, nil
      

    .control-group.my-3
      %span.control-label
        Perído Actual:
        %b= label_tag academic_process.period.name, nil

    .control-group.my-3
      %span.control-label Período a Clonar:
      .controls

        = collection_select(nil, :cloneble_academic_process_id, academic_process.school.academic_processes.joins(period: :period_type).order('periods.year DESC, period_types.code DESC').reject{|pa| pa.id.eql? academic_process.id}, :id, :name, {prompt: "-- Seleccione Proceso --", selected: academic_process.process_before}, {class: 'text-field form-control', required: true})
    .control-group.mt-3.mb-3
      %span.control-label
        %label.btn.btn-info.btn-sm
          ¿Clonar Profesores?:
          = check_box_tag :teachers, nil, true
          
    .control-group.mt-3.mb-3
      %span.control-label
        %label.btn.btn-info.btn-sm
          ¿Clonar Horarios?:
          = check_box_tag :schedules, nil, true

    .modal-footer
      - if false
        =# Da error y no funciona
        %button.btn.btn-secondary{"data-bs-dismiss": :modal, type: :button} Cancelar

      = submit_tag 'Guardar', class: 'btn btn-primary', 'data-confirm': "¿Seguro que desea clonar la planificación del periodo indicado?. Se eliminarán las secciones existentes." 


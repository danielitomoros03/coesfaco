      - grades.limit(10).each do |grade, i|
        - student = grade.student
        - reverse_name = student.user.reverse_name
        %tr
          %td.text-center= grade.label_status_enroll_academic_process(academic_process.id)
          %td= student.sede 
          - address = student.address ? student.address.city_and_state : ''
          %td{title: address}= address
          %td= student.user_ci
          %td{title: reverse_name}= link_to reverse_name, "/admin/student/#{grade.student_id}", target: '_black'
          %td.text-center= grade.appointment_from 
          %td.text-center= grade.appointment_to
          %td.text-center.align-middle= grade.label_current_permanence_status
          %td= grade.efficiency
          %td= grade.simple_average
          %td= grade.weighted_average


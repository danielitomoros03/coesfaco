-# frozen_string_literal: true
= simple_form_for(@academic_record) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :section
    = f.association :enroll_academic_process
    = f.input :first_q
    = f.input :second_q
    = f.input :third_q
    = f.input :final_q
    = f.input :post_q
    = f.input :status_q
    = f.input :type_q

  .form-actions
    = f.button :submit

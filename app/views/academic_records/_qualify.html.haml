  %tbody
    - section.academic_records.joins(:user).order('users.last_name ASC, users.first_name ASC').each do |acre|
      - user = acre.user
      - id = acre.id
      - disable_row = (acre.retirado? || acre.pi? || acre.preinscrito_in_process?)
      - status = acre.status
      %tr{id: "acRe#{acre.id}", class: acre.tr_class_by_status_q}
        %td= user.ci
        %td= user.reverse_name

        - @academic_record = acre
        = render partial: '/academic_records/form_qualify', locals: {academic_record: acre, disable_row: disable_row, status: status, id: id}
        = render partial: '/academic_records/qualification_to_s', locals: {academic_record: acre, id: id}
        %td
          .badge.bg-info{id: "labelStatus#{acre.id}"}= status.titleize
- logged_as_admin = (current_user and current_user.admin? and session[:rol].eql? 'admin') ? true : false

%table.table.table-sm.table-striped.table-hover
  %thead
    %tr
      %th{style: 'width:120px;'} Código
      %th.text-center{style: 'width:10px;'} Sem
      %th Asignatura
      %th.text-center{style: 'width:10px;'} Créd
      %th.text-center{style: 'width:10px;'} Tipo
      %th.text-center{style: 'width:10px;'} Sec
      %th.text-center{style: 'width:10px;'} Cal
      %th.text-center{style: 'width:10px;'} Estado
      - if enabled_options
        %th.text-center{style: 'width:240px;'} Opciones

  %tbody
    - academic_records.by_subjects.each do |academic_record|
      - subject = academic_record.subject
      %tr{class: academic_record.tr_class_by_status_q}
        %td{title: 'Ir al detalle de la asignatura'}= link_to_if logged_as_admin, subject.code, "/admin/subject/#{subject.id}"
        %td.text-center= subject.ordinal
        %td{title: subject.name}= subject.name
        %td.text-center= subject.unit_credits
        %td.text-center= subject.modality_initial_letter
        %td.text-center{title: 'Ir al detalle de la sección'}= link_to_if logged_as_admin, academic_record.section.code, "/admin/section/#{academic_record.section.id}"
        %td.text-center= academic_record.final_q_to_02i
        %td.text-center.align-middle= academic_record.badge_status.html_safe
        - if enabled_options
          %td.align-middle
            = render partial: 'academic_records/options', locals: {academic_record: academic_record}

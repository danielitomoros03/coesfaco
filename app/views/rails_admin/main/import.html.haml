- if entity = params[:model_name].pluralize #= request.path.split("/")[2].pluralize
  - if entity.eql? ('students')
    - headers = 'ci, email, nombres, apellidos, sexo, telefono'
  - elsif entity.eql? ('teachers')
    - headers = 'ci, email, nombres, apellidos, sexo, telefono'
  - elsif entity.eql? ('subjects')
    - headers = 'id, nombre, creditos, modalidad, tipo_calificacion'
  - elsif entity.eql? ('academic_records')
    - headers = 'ci, codigo, numero, nombre_periodo, nota'


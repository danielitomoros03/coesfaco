-# frozen_string_literal: true
= simple_form_for(@enroll_academic_process) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :grade
    = f.association :academic_process
    = f.input :enroll_status
    = f.input :permanence_status

  .form-actions
    = f.button :submit

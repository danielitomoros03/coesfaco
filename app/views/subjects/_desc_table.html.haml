
%table.table.table-sm.text-center
  %thead
    %tr
      %td Código
      %td{style: 'width:30%'} Nombre
      %td{style: 'width:30%'} Area
      %td Orden
      %td Modalidad
      %td Créd

  %tbody
    %tr
      %td
        .label.bg-info= subject.code
      %td= subject.name
      %td= link_to_if (subject.area and current_user and current_user.admin and current_user.admin.authorized_read? 'Area'), subject.area.name, "/admin/area/#{subject.area}"
      %td
        .label.bg-info= subject.ordinal
      %td= subject.label_modality
      %td.text-center= subject.unit_credits